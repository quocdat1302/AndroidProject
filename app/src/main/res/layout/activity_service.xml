<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Top Status Info -->
    <LinearLayout
        android:id="@+id/statusArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hệ Thống &amp; Giải Trí"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:alpha="0.7"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Player &amp; Monitor"
            android:textColor="#1DB954"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Disc View (Fake) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/discView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/statusArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="125dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#1DB954">

        <ImageView
            android:layout_width="213dp"
            android:layout_height="226dp"
            android:padding="60dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:tint="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang theo dõi: Chế độ máy bay"
            android:textColor="#FFFFFF"
            android:alpha="0.5"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartMusic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_button_orange"
                android:text="▶"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStopMusic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_button_dark_gray"
                android:text="■"
                android:textColor="#FFFFFF"
                android:textSize="30sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lưu ý: Thử bật Airplane Mode để thấy Toast"
            android:textColor="#B3B3B3"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
